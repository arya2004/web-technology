<%- include('partials/header'); %>

    <div>
        <h2>Book Catalogue</h2>

        <% if (user) { %>
            <div class="my-3">
                <a class="btn btn-success" href="/books/add">Add New Book</a>
            </div>
            <% } %>

                <div class="row mt-4">
                    <% if (books && books.length> 0) { %>
                        <% books.forEach(book=> { %>
                            <div class="col-md-3 mb-4">
                                <div class="card h-100">

                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= book.title %>
                                        </h5>
                                        <p class="card-text">Author: <%= book.author %>
                                        </p>
                                        <p class="card-text">
                                            <%= book.description %>
                                        </p>
                                        <p class="card-text fw-bold">$<%= book.price %>
                                        </p>

                                        <% if (user) { %>
                                            <div class="mt-2 d-flex justify-content-between">
                                                <a href="/books/edit/<%= book._id %>"
                                                    class="btn btn-primary btn-sm">Edit</a>
                                                <a href="/books/delete/<%= book._id %>" class="btn btn-danger btn-sm"
                                                    onclick="return confirm('Are you sure you want to delete this book?');">Delete</a>
                                            </div>
                                            <% } %>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                                <% } else { %>
                                    <p>No books available at this time.</p>
                                    <% } %>
                </div>
    </div>

    <%- include('partials/footer'); %>